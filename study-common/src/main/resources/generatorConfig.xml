<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MySqlContext" targetRuntime="MyBatis3"
             defaultModelType="flat">

        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <commentGenerator type="com.deng.common.generate.MyCommentGenerator">
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="false"/>
            <!--生成注释-->
            <property name="suppressAllComments" value="false"/>
        </commentGenerator>

        <!--     -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://127.0.0.1:3306/dtx_storage?useUnicode=true&amp;amp;useSSL=false&amp;serverTimezone=Asia/Shanghai"
                        userId="root"
                        password="root123456">
        </jdbcConnection>



        <javaTypeResolver type="com.deng.common.generate.MyJavaTypeResolver">

        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.deng.hmily.tcc.storage.tx.dao.po"
                            targetProject="study-common/src/main/java">
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapper" targetProject="study-common/src/main/resources/base"/>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.deng.hmily.tcc.storage.tx.dao.mapper"
                             targetProject="study-common/src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="product">
<!-- useActualColumnNames 默认值为false,则MyBatis Generator会将数据库中实际的字段名字转换为驼峰风格作为生成的实体类的属性名。-->
<!--            <property name="useActualColumnNames" value="true"/>-->
<!--            <generatedKey column="stu_id" sqlStatement="MySql"/>-->
        </table>

    </context>
</generatorConfiguration>